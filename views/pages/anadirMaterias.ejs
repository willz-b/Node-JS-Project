<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../includes/head') %>
  </head>
  <body>
    <%- include('../includes/header') %>

    <div class="container" style="margin-top: 80px !important">
      <div class="row justify-content-md-center mb-5">
        <div class="col-md-12 mt-5">
          <h2 class="text-center title">
            Añandir Materias
            <hr />
          </h2>
        </div>
      </div>
    </div>

    <div class="container mt-5">
    <h3 class="text-center">Lista de Materias Disponibles</h3>
    <hr />

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Créditos</th>
                    <th>Horario</th>
                </tr>
            </thead>
            <tbody>
                <% let contador = 1; %>
                <% materiasDisponibles.forEach(function(materia) { %>
                <tr>
                    <th scope="row"><%= contador %></th>
                    <td><%= materia.nombre %></td>
                    <td><%= materia.codigo %></td>
                    <td><%= materia.descripcion %></td>
                    <td><%= materia.creditos %></td>
                    <td><%= materia.horario %></td>
                </tr>
                <% contador++; %>
                <% }); %>
            </tbody>
        </table>
    </div>

    <h4 class="text-center mt-5">Añadir Nueva Materia Disponible</h4>
    <form action="/materias-disponibles" method="POST">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="nombre" class="form-label">Nombre de la Materia</label>
                <input type="text" class="form-control" id="nombre" name="nombre" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="codigo" class="form-label">Código de la Materia</label>
                <input type="text" class="form-control" id="codigo" name="codigo" required>
            </div>
            <div class="col-12 mb-3">
                <label for="descripcion" class="form-label">Descripción</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
            </div>
            <div class="col-md-6 mb-3">
                <label for="creditos" class="form-label">Créditos</label>
                <input type="number" class="form-control" id="creditos" name="creditos" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="horario" class="form-label">Horario</label>
                <input type="text" class="form-control" id="horario" name="horario">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Añadir Materia</button>
    </form>
</div>

</div>


    <%- include('../includes/scripts') %>

</body>
</html>
